<%= simple_form_for @customer, html: { class: 'form-horizontal' } do |customer_form| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Customer</legend>
    <div class="input-field col s6">
      <%= customer_form.input :first_name %>
    </div>
    <div class="input-field col s6">
      <%= customer_form.input :last_name %>
    </div>
    <div class="input-field col s6">
      <%= customer_form.input :phone %>
    </div>
    <div class="input-field col s6">
      <%= customer_form.input :email %>
    </div>

    <%= customer_form.simple_fields_for :user do |user_form| %>      
      <div class="input-field col s6">
        <%= user_form.input :username %>
      </div>
      <div class="input-field col s6">
        <%= user_form.input :password %>
      </div>
      <div class="input-field col s6">
        <%= user_form.input :password_confirmation %>
      </div>
    <% end %>
  
    <!-- buttons -->
    <div class="form-actions row">
      <div class="col s12 center">
        <br>
        <%= link_to customer_form.submit nil, class: 'btn purple lighten-3' %>
        <br><br>
        <% if logged_in? && current_user.role?(:admin) %>
          <div class="button"><%= link_to 'Back', customers_path, :class => 'btn purple lighten-3' %></div>
        <% else %>
          <div class="button"><%= link_to 'Cancel', home_path, :class => 'btn purple lighten-3' %></div>
        <% end %>
      </div>
    </div>

  </fieldset>
  
<% end %>