<div class="container">
	<div class="row">
		<div class="col s12 center">
			<%= render :partial => "address_details" %>
			
			<% if current_user.role?(:admin) || current_user.role?(:customer) %>
				<!-- Add buttons to list all, edit object or destroy object -->
				<%= render partial: "partials/object_options", locals: {model_name: "address", object: @address}  %>
			<% else %>
				<div class="button"><%= link_to 'Back', home_path, :class => 'btn purple lighten-3' %></div>
			<% end %>
		</div>
	</div>
</div>
