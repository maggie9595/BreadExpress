<div class="container">
	<div class="row">
		<div class="col s12 center">
			<% if @cart_items.blank? %>
				<h4>Your shopping cart is empty.</h4>
				<p><%= link_to "Shop now!", items_path %></p>
			<% else %>
				<h4>Shopping Cart</h4>
				
				<table class="centered hoverable">
			  <thead>
			    <tr>
			      <th>Item</th>
			      <th>Price</th>
			      <th>Quantity</th>
			      <th>&nbsp;</th>
			    </tr>
			  </thead>
			  <tbody>
			    <% @cart_items.each do |oi| %>
			      <tr>
		          <td><%= link_to oi.item.name, item_path(oi.item) %></td>
			        
			        <td><%= number_to_currency(Item.find(oi.item.id).current_price) %></td>
			        <td>
			        	<a class="btn-floating btn-small waves-effect waves-light purple lighten-3" href="remove_one_of_item/<%= oi.item.id %>"><i class="mdi-content-remove"></i></a>
			        	&nbsp;
			        	<%= oi.quantity %>
			        	&nbsp;
			        	<a class="btn-floating btn-small waves-effect waves-light purple lighten-3" href="add_item/<%= oi.item.id %>"><i class="mdi-content-add"></i></a>
			        </td>
			        <td><a class="btn-floating btn-small waves-effect waves-light purple lighten-3" href="remove_item/<%= oi.item.id %>"><i class="mdi-navigation-close"></i></a></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>

			<br>
			<b>Your subtotal is: <%= number_to_currency(@subtotal) %>.</b>
			<br><br>
      <div class="button"><%= link_to 'Check Out', new_order_path, :class => 'btn purple lighten-3' %></div>
		<% end %>
		</div>
	</div>
</div>